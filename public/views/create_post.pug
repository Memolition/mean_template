<div ng-controller="blog_create_controller">
    <div ng-show="error" class="alert alert-danger">{{errorMessage}}</div>
    <form class="form" ng-submit="createPost()">
        <div class="form-group">
            <label>Title</label>
            <input type="text" class="form-control" name="title" ng-model="createForm.title" required>
        </div>
        <div class="form-group">
            <label>Author</label>
            <input type="text" class="form-control" name="password" ng-model="createForm.author" value="{{username}}" required>
        </div>
        <div class="form-group">
            <label>Post content</label>
            <textarea class="form-control" name="body" ng-model="createForm.body" placeholder="Post content" required></textarea>
        </div>
        <div>
            <button type="submit" class="btn btn-default" ng-disabled="disabled">Create post</button>
        </div>
    </form>
</div>